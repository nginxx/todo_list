<div class="row project_<%= @project.id%>">
  <div class="col-md-8 col-md-offset-2">
    <table class="table">
      <thead>
      <tr>
        <td>
          <span class="glyphicon glyphicon-calendar"></span>
        </td>
        <td class="pr_name">
          <%=@project.name%>
        </td>
        <td>
          <span class="glyphicon glyphicon-pencil" data-project_id = "<%=@project.id%>" data-title = "<%=@project.name%>" data-toggle="modal" data-target="#edit_project"></span>&nbsp;
          <span class="glyphicon glyphicon-trash" data-project_id = "<%=@project.id%>" data-type = 'project'></span>
        </td>
      </tr>

      <tr>
        <%= form_tag(:add_task, method: 'post', remote: true) do %>
            <td>
              <span class="glyphicon glyphicon-plus"></span>
            </td>
            <td>
              <%= text_field(:task,:project_id,type: 'hidden',value: @project.id)%>
              <%= text_field(:task,:name,class: 'form-control task_field', placeholder: 'Start typing here to create a task...')%>
            </td>
            <td>
              <%= button_tag('Add task',class:'btn btn-add_task') %>
            </td>
        <% end %>
      </tr>
      </thead>
      <tbody>

      </tbody>
    </table>
  </div>
</div>